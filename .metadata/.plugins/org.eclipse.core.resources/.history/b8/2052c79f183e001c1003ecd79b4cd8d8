package test6;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class ProcedureTest {
	Scanner sc = new Scanner(System.in);
	Connection conn = null;
	Statement stmt = null;

	public void connet() {

		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			String url = "jdbc:oracle:thin:@localhost:1521:orcl";
			try {
				conn = DriverManager.getConnection(url, "javalink", "javalink");
			} catch (SQLException e) {

			}
		} catch (ClassNotFoundException e) {

		}
		try {
			conn.close();
		} catch (SQLException e) {
			
		}
		System.out.println("Connection Success!");
	}

//	저장프로시저 호출전 데이터 입력
	public void insert() {
		System.out.println("id를 입력하세요.");
		String id = sc.next();
		System.out.println("passwd를 입력하세요.");
		String passwd = sc.next();
		System.out.println("name을 입력하세요.");
		String name = sc.next();
		System.out.println("age를 입력하세요.");
		int age = sc.nextInt();
		System.out.println("addr을 입력하세요.");
		String addr = sc.next();
		System.out.println("email을 입력하세요.");
		String email = sc.next();
		System.out.println("insert success!");
	}

	public void select() {
		try {
			stmt = conn.createStatement();
			String query = "select * from member2";
			ResultSet rs = stmt.executeQuery(query);
			while (rs.next()) {
				String id = rs.getString(1);
				String passwd = rs.getString(2);
				String name = rs.getString(3);
				int age = rs.getInt(4);
				String addr = rs.getString(5);
				String email = rs.getString(6);
				System.out.println("아이디 : "+id+", 비밀번호 : " +passwd+", 이름 : "+name+
						", 나이 : "+age+", 주소 : "+addr+", 이메일 : "+email);
			}
		} catch (SQLException e) {
			
		}
	
		
	}

	public void insertMember() {
		
	}

	public static void main(String[] args) {

	}

}
